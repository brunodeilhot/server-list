{% extends 'base.html.twig' %}

{% block title %}Server Information - Upload{% endblock %}

{% block body %}

    {{ form_start(form, {
        'attr': {
            'class': 'space-y-6',
            'hx-post': path('app_upload'),
            'hx-target': 'body',
        }
    }) }}

    <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Upload File
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Please select your .xlsx file to upload.
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <div class="space-y-6">
                    {{ form_widget(form.upload_file, {
                        'label': false,
                        'attr': {'class': 'block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100'}
                    }) }}

                    {% for error in form.upload_file.vars.errors %}
                        <div class="text-red-500 text-sm mt-2">{{ error.message }}</div>
                    {% endfor %}

                    <div>
                        <button type="submit"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Upload File
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

